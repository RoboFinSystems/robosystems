# CELERY_TASK_SOFT_TIME_LIMIT=6900
# CELERY_WORKER_PREFETCH_MULTIPLIER=0
# CELERY_TASK_RETRY_DELAY=60
# CELERY_TASK_MAX_RETRIES=3
# CELERY_RESULT_EXPIRES=3600

## Cache TTLs
# CREDIT_BALANCE_CACHE_TTL=300
