{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "tailwindCSS.experimental.classRegex": [
    ["twMerge\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["createTheme\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  "python.testing.pytestArgs": [
    "tests",
    "--ignore=robosystems/arelle/EDGAR",
    "--ignore=robosystems/arelle"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.autoComplete.extraPaths": ["."],
  "files.exclude": {
    ".venv/**": true,
    "node_modules/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.ruff_cache/**": true,
    "**.egg-info/**": true,
    "**/.git/**": true,
    "__mocks__/**": true,
    ".coverage/**": true,
    "celerybeat-schedule.db": true
  },
  "search.exclude": {
    "robosystems/arelle/EDGAR/**": true,
    "robosystems/arelle/**": true,
    ".venv/**": true,
    "node_modules/**": true
  },
  "ruff.exclude": ["robosystems/arelle/EDGAR/**", "robosystems/arelle/**"]
}
